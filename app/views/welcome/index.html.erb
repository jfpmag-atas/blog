<%= render "users/header" %>
<h1>Home</h1>
<%= link_to 'Post article', new_article_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
	<% if @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end.empty? %>
    <tr>
      <td>There are no articles</td>
    </tr>
  <% end %>

  <%= render "tags/tags_footer" %>
  <%= render "users/footer" %>
</table>